{
  "name": "@bonfhir/codegen",
  "version": "2.0.0",
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "scripts": {
    "bonfhir-codegen": "ts-node src/index.ts",
    "build": "pnpm clean && rollup --config rollup.config.mjs",
    "check": "prettier --check ./src && eslint ./src && tsc --noEmit",
    "clean": "rimraf dist",
    "dev": "ts-node src/index.ts",
    "format": "prettier --loglevel warn --write ./**/*.ts && eslint --fix ./**/*.ts",
    "test": "jest"
  },
  "type": "module",
  "bin": {
    "bonfhir-codegen": "./dist/cjs/index.cjs"
  },
  "exports": {
    "import": "./dist/esm/index.mjs",
    "require": "./dist/cjs/index.cjs"
  },
  "devDependencies": {
    "@bonfhir/eslint-config": "workspace:*",
    "@bonfhir/eslint-plugin": "workspace:*",
    "@bonfhir/prettier-config": "workspace:*",
    "@bonfhir/typescript-config": "workspace:*",
    "@rollup/plugin-commonjs": "^24.1.0",
    "@rollup/plugin-json": "^6.0.0",
    "@rollup/plugin-node-resolve": "^15.0.2",
    "@rollup/plugin-replace": "^5.0.2",
    "@rollup/plugin-terser": "^0.4.3",
    "@rollup/plugin-typescript": "^11.1.0",
    "@swc/core": "^1.3.55",
    "@types/chunk-text": "^1.0.0",
    "@types/ejs": "^3.1.2",
    "@types/jest": "^29.5.1",
    "@types/listr": "^0.14.4",
    "@types/micromatch": "^4.0.2",
    "@types/node": "^18.16.2",
    "@types/yargs": "^17.0.24",
    "chalk": "^5.2.0",
    "chunk-text": "^2.0.1",
    "ejs": "^3.1.9",
    "esbuild-jest": "^0.5.0",
    "fast-glob": "^3.2.12",
    "jest": "^29.5.0",
    "listr": "^0.14.3",
    "micromatch": "^4.0.5",
    "rimraf": "^5.0.0",
    "rollup": "^3.21.0",
    "rollup-plugin-filesize": "^10.0.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6",
    "yargs": "^17.7.2"
  },
  "prettier": "@bonfhir/prettier-config"
}

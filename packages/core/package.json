{
  "name": "@bonfhir/core",
  "version": "2.0.0",
  "scripts": {
    "build": "pnpm clean && pnpm codegen && pnpm copyfiles && rollup --config rollup.config.mjs",
    "check": "prettier --check ./src && eslint ./src && tsc --noEmit",
    "clean": "rimraf dist && rimraf src/r4b/[!__]**",
    "copyfiles": "pnpm --dir=\"${PWD}/../codegen\" dev copy -s \"${PWD}/src/r5\" -t \"${PWD}/src/r4b\" -i '**/*.ts' -e '**/*.codegen.ts'",
    "codegen": "pnpm --dir=\"${PWD}/../codegen\" dev generate --fhir r4b,r5 -t \"${PWD}/templates/**/*.ejs\" -b \"${PWD}/templates\" -p 'prettier --write %files%' -o \"${PWD}/src/<%= fhir.release %>\"",
    "dev-watch": "nodemon --watch templates --watch src/r4b --ext ejs,ts --ignore '**/*.codegen.ts' --exec \"pnpm codegen && pnpm copyfiles\"",
    "format": "prettier --loglevel warn --write ./**/*.ts && eslint --fix ./**/*.ts",
    "test": "jest"
  },
  "type": "module",
  "exports": {
    "r4b": {
      "import": "./dist/r4b/esm/index.js",
      "require": "./dist/r4b/cjs/index.cjs",
      "types": "./dist/r4b/types/index.d.ts"
    },
    "r5": {
      "import": "./dist/r5/esm/index.js",
      "require": "./dist/r5/cjs/index.cjs",
      "types": "./dist/r5/types/index.d.ts"
    }
  },
  "devDependencies": {
    "@bonfhir/codegen": "workspace:*",
    "@bonfhir/eslint-config": "workspace:*",
    "@bonfhir/prettier-config": "workspace:*",
    "@bonfhir/typescript-config": "workspace:*",
    "@rollup/plugin-commonjs": "^24.1.0",
    "@rollup/plugin-node-resolve": "^15.0.2",
    "@rollup/plugin-replace": "^5.0.2",
    "@rollup/plugin-terser": "^0.4.3",
    "@rollup/plugin-typescript": "^11.1.1",
    "@swc/core": "^1.3.55",
    "@types/jest": "^29.5.1",
    "@types/marked": "^4.3.0",
    "@types/node": "^18.16.2",
    "decimal.js": "^10.4.3",
    "esbuild-jest": "^0.5.0",
    "jest": "^29.5.0",
    "localized-address-format": "^1.3.1",
    "marked": "^5.0.2",
    "nodemon": "^2.0.22",
    "rimraf": "^5.0.0",
    "rollup": "^3.21.0",
    "rollup-plugin-dts": "^5.3.0",
    "rollup-plugin-filesize": "^10.0.0",
    "typescript": "^5.0.4"
  },
  "prettier": "@bonfhir/prettier-config"
}
